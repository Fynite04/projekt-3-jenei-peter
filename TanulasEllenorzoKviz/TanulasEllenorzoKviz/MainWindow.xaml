        <Button x:Name="next_Btn" Content="🡪" HorizontalAlignment="Left" Margin="539,322,0,0" VerticalAlignment="Top" Width="40" Height="35" FontSize="20" Click="next_Btn_Click"/>
        <Button x:Name="prev_Btn" Content="🡨" HorizontalAlignment="Left" Margin="10,322,0,0" VerticalAlignment="Top" Width="40" Height="35" FontSize="20" Click="prev_Btn_Click"/>
        <Label x:Name="index_Lbl" Content="X/10" HorizontalAlignment="Left" Margin="277,304,0,0" VerticalAlignment="Top" Visibility="Visible"/>
        <Button x:Name="kiertekeles_Btn" Content="Kiértékelés" HorizontalAlignment="Left" Margin="237,354,0,0" VerticalAlignment="Top" Width="115" Click="kiertekeles_Btn_Click" IsEnabled="False"/>
