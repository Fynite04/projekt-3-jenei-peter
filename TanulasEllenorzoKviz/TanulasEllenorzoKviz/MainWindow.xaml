        <Button x:Name="lap2_Btn" Content="2" HorizontalAlignment="Left" Margin="103,328,0,0" VerticalAlignment="Top" Height="21" Width="48" Click="lapGomb_Click"/>
        <Button x:Name="lap3_Btn" Content="3" HorizontalAlignment="Left" Margin="151,328,0,0" VerticalAlignment="Top" Height="21" Width="48" Click="lapGomb_Click"/>
